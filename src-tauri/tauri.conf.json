{
  "productName": "WisprClone",
  "version": "0.1.0",
  "identifier": "com.wispr-clone.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "WisprClone",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true
      },
      {
        "label": "hud",
        "url": "hud.html",
        "width": 160,
        "height": 60,
        "x": 20,
        "y": 20,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "resizable": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}